{
  "name": "innovoebs-web3-school",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "hardhat": "^2.22.5",
    "json-server": "^1.0.0-beta.1",
    "nodemon": "^3.1.3"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.1.1",
    "@chainlink/hardhat-chainlink": "^0.0.4",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "pm2": "^5.4.1"
  },
  "scripts": {
    "start": "concurrently  \"cd client && npm run dev\" \"cd server && npx json-server --watch ./data/db.json --port 3001\" \"cd server && node index.js \" --names React,JSON-Server,Node --prefix-colors red,#FFA500,yellow",
    "dev": "concurrently \"npx json-server --watch ./server/data/db.json --port 3001\" \"node server/web3-api/index.js \" --names JSON-Server,Node --prefix-colors red,#FFA500"
  }
}
